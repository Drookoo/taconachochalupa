hosts       = PH_SQL_SERVER_ADDRESS:PH_SQL_SERVER_PORT
user        = PH_VMAIL_DB_BIND_USER
password    = PH_VMAIL_DB_BIND_PASSWD
dbname      = PH_VMAIL_DB_NAME
query       = SELECT forwardings.forwarding FROM forwardings,alias_domain,domain WHERE alias_domain.alias_domain='%d' AND forwardings.address=('%u' || '@' || alias_domain.target_domain) AND alias_domain.target_domain=domain.domain AND forwardings.active=1 AND alias_domain.active=1 AND domain.backupmx=0
